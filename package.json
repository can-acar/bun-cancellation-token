{
  "name": "bun-cancellation-token",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "description": "Cancellation tokens for Bun with timeouts, deadlines, and linked tokens",
  "license": "MIT",
  "keywords": ["bun", "cancellation", "abortcontroller", "timeout", "deadline"],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "bun": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run index.ts",
    "test": "bun test",
    "clean": "rm -rf dist",
    "build": "bun run clean && bun build ./index.ts --outdir ./dist --target bun && tsc -p tsconfig.types.json",
    "prepare": "bun run build",
    "ex:fetch": "bun run ./examples/fetch-with-timeout.ts",
    "ex:serve": "bun run ./examples/serve-with-timeouts.ts",
    "ex:concurrency": "bun run ./examples/concurrency.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
